<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#673AB7"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2196F3"
            android:textStyle="italic"
            android:textSize="20sp"
            android:text="Please manage all values carefully !!!"
            android:gravity="center"/>


    </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginBottom="5dp"
                    android:text="Resend your backup information to your email"
                    android:textSize="20dp"
                    android:textColor="#ffff"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/btnResendId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:text="Send"
                    android:textColor="#2196F3"
                    android:background="#3F51B5"
                    android:gravity="center"/>

            </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_marginBottom="5dp"
        android:text="Create another attendance type from existence"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:gravity="center"
        />
        <Button
            android:id="@+id/btnLocalAttTypeIndexId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:text="Create"
            android:textColor="#2196F3"
            android:background="#3F51B5"
            android:gravity="center"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"

            android:textColor="#ffff"
            android:layout_marginBottom="5dp"
            android:text="Manage person's information"
            android:textSize="20dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btnLocalAttPersonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:textColor="#2196F3"
            android:background="#3F51B5"
            android:text="Manage"
            android:gravity="center"/>

    </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"

                    android:textColor="#ffff"
                    android:layout_marginBottom="5dp"
                    android:text="Delete specific percentage"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/btnPercentageIndexId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:text="Delete"
                    android:textColor="#2196F3"
                    android:background="#3F51B5"
                    android:gravity="center"/>

            </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"

            android:textColor="#ffff"
            android:layout_marginBottom="5dp"
            android:text="Delete specific attendance"
            android:textSize="20dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btnAttIndexId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:text="Delete"
            android:textColor="#2196F3"
            android:background="#3F51B5"
            android:gravity="center"/>

    </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"

                    android:textColor="#ffff"
                    android:layout_marginBottom="5dp"
                    android:text="Delete All Counted Attendances"
                    android:textSize="20dp"
                    android:gravity="center"
                    />
                <Button
                    android:id="@+id/btndeleteAttIndexId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:layout_marginTop="5dp"
                    android:text="Delete"
                    android:textColor="#2196F3"
                    android:background="#3F51B5"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="100dp"
                android:gravity="center"

                >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"

            android:textColor="#ffff"
            android:layout_marginBottom="5dp"
            android:text="Reset your application"
            android:textSize="20dp"
            android:gravity="center"
            />
        <Button
            android:id="@+id/btnAllPersonInfoIndexId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:text="Reset"
            android:textColor="#2196F3"
            android:background="#3F51B5"
            android:gravity="center"

            />

    </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>