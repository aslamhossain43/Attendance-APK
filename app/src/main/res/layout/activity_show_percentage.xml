<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ShowPercentage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="vertical"
        android:background="#673AB7"
        android:layout_marginTop="1dp">
        <TextView
            android:id="@+id/textViewHeadingForClassId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:textSize="20sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:text="Class 12"
            android:layout_marginTop="5sp"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/textViewHeadingForDtaeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="40"
            android:textSize="15sp"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:text="2019/10/10 10/10 AM"
            android:layout_marginBottom="5sp"
            android:gravity="center"
            />


    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:background="#673AB7"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="26"
            android:text="Roll No :"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textColor="#ffff"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:text="Day :"
            android:textColor="#ffff"
            android:textStyle="bold"
            android:textSize="12dp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:text="P :"
            android:textStyle="bold"
            android:textColor="#ffff"

            android:textSize="12dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="16"
            android:text="A :"
            android:textStyle="bold"
            android:textColor="#ffff"

            android:textSize="12dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="26"
            android:text="Percentage :"
            android:textStyle="bold"
            android:textColor="#ffff"

            android:textSize="12dp"
            android:gravity="center"
            />


    </LinearLayout>


    <ListView
        android:id="@+id/listViewShowPercentageId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="#B3B6AE"
        android:divider="#ED282929"
        android:dividerHeight="1dp"


        />
</LinearLayout>