<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SpecificAttendancesFromFirebase">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="2"
       android:orientation="vertical"
       android:background="#4CAF50"
       android:layout_marginTop="1dp"
       >
       <TextView
           android:id="@+id/textViewHeadingForClassId"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textSize="20sp"
           android:textStyle="bold"
           android:text="Class 12"
           android:layout_marginTop="5sp"
           android:gravity="center"
           />


       <TextView
           android:id="@+id/textViewHeadingForDtaeId"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:textSize="15sp"
           android:textStyle="bold"
           android:text="2019/10/10 10/10 AM"
           android:layout_marginBottom="5sp"
           android:gravity="center"
           />


   </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#4CAF50"
        android:layout_marginTop="1dp"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Roll No :"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="P/A/Off :"
            android:textStyle="bold"

            android:textSize="20sp"
            android:gravity="center"
            />

       <!-- <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="45sp"
            android:layout_weight="2"
            android:text="Date :"
            android:textStyle="bold"

            android:textSize="20sp"
            />-->


    </LinearLayout>


    <ListView
        android:id="@+id/listViewSpecificAttFromFirebaseId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:divider="#339FA7A7"
        android:dividerHeight="2dp"
        android:listSelector="#A7DB6A" />

</LinearLayout>